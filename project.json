{
"version":1,
"name":"Visual C++ Headers and Libraries Installer",
"build_definitions": [
	{
		"name":"Compile project",
		"build_steps": [
			{
				"action":"compile",
				"args":["-fms-extensions", "-fms-compatibility", "-fms-compatibility-version=19.10.25017", "-std=c++14", "-fcxx-exceptions", "-fexceptions"],
				"sys_include_dir":["ucrt","msvc"],
				"inputs":["vcinstaller.cpp"],
				"outputdir":"bin"
			}
		]
	},
	{
		"name":"Link objects to produce executable",
		"build_steps": [
			{
				"action":"link",
				"args":["/defaultlib:msvcrt.lib"],
				"inputs":["vcinstaller.o"],
				"output":"vcins.exe"
			}
		]
	}
]
}